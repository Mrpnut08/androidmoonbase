<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mm_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainscreen"
    android:gravity="center_vertical"
    android:orientation="vertical" >

        <spaceappschallenge.moonville.ui.FontTextView
            android:id="@+id/mm_newgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:onClick="showNewGameScreen"
            android:clickable="true"
            android:text="@string/menu_newgame"  />

        <spaceappschallenge.moonville.ui.FontTextView
            android:id="@+id/mm_loadgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginLeft="40dp"
            android:onClick="showBaseOverviewScreen"
            android:clickable="true"
            android:text="@string/menu_loadgame" />
        
        <spaceappschallenge.moonville.ui.FontTextView
            android:id="@+id/mm_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginLeft="40dp"
			android:clickable="true"
			android:onClick="showSettingsScreen"
            android:text="@string/menu_settings" />
        
        <spaceappschallenge.moonville.ui.FontTextView
            android:id="@+id/mm_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginLeft="40dp"
			android:clickable="true"
            android:onClick="showCreditsScreen"
            android:text="@string/menu_credits" />

</LinearLayout>